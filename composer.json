{
  "name": "convenia/textmapable",
  "type": "library",
  "authors": [
    {
      "name": "Amadeus Delfino",
      "email": "amadeus.cmd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "phpunit/phpunit": " ^6.4",
    "friendsofphp/php-cs-fixer": "2.10.*"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Convenia\\TextMap\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ],
    "psr-4": {
      "Convenia\\TextMap\\Tests\\": "tests/"
    }
  },
  "scripts": {
      "style-fixer": [
        "./vendor/bin/php-cs-fixer fix src",
        "./vendor/bin/php-cs-fixer fix tests"
      ]
  },
  "config": {
    "preferred-install": "dist"
  }
}
